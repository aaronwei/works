<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff0fff1"
              android:orientation="vertical"
              android:gravity="center"
              >
    <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="60dp"
                  android:orientation="horizontal"
                  android:background="#66CCCC"
                  android:gravity="center_horizontal"
                  android:baselineAligned="true">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center" android:layout_weight="1">
            <ImageView
                    android:id="@+id/image"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/app_gen"
                    />
        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:orientation="vertical"
                      android:id="@+id/centerLayout"
                      android:layout_weight="9" android:gravity="left|center_vertical" android:layout_marginLeft="5dp">

                <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF" android:layout_margin="2dp"/>

                <TextView
                        android:id="@+id/lastUpdateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFFFF" android:layout_margin="2dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:orientation="vertical"
                      android:layout_marginLeft="10dp" android:layout_weight="2" android:gravity="center">


                <TextView
                        android:id="@+id/info"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="#ffff7e77"
                        android:textColor="#FFFFFFFF" android:gravity="center" android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/isRun"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="#ffff7e77"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="#FFFFFFFF" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>